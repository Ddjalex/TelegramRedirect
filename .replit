[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Mastra Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PHP Admin Panel"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Inngest Server"

[[workflows.workflow]]
name = "Mastra Bot"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 3001

[[workflows.workflow]]
name = "PHP Admin Panel"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd cpanel-bot && php -S 0.0.0.0:5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Inngest Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/inngest.sh"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

