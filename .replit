modules = ["nodejs-20", "php-8.2", "bash"]

[agent]
stack = "AGENT_STACK"
integrations = ["agentstack-trigger-telegram:1.0.0"]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["jq"]

[env]
MASTRA_HIDE_CLOUD_CTA = "true"

[deployment]
build = ["bash", "scripts/build.sh"]
run = ["sh", "-c", "cd .mastra/output && NODE_ENV=production node index.mjs"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8289
externalPort = 3001

[[ports]]
localPort = 37103
externalPort = 5000

[[ports]]
localPort = 40987
externalPort = 3003

[[ports]]
localPort = 41509
externalPort = 4200

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PHP Admin Panel"

[[workflows.workflow]]
name = "PHP Admin Panel"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd cpanel-bot && php -S 0.0.0.0:5000 -t ."
waitForPort = 5000

[userenv]

[userenv.shared]
TARGET_CHAT_ID = "7503130172"
ALLOWED_CHAT_IDS = "383870190"
